<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}PROSTAGE{% endblock %}</title>
        {% block stylesheets %}
          <link rel="stylesheet" href="{{asset('/css/bootstrap.min.css')}}">
        {% endblock %}
    </head>
    <body>
    <div class="container-fluid">
    {% block body %}


        {% block slider %}

          <div class="row">
            <div class="col-md-12">
              <div class="page-header">
                <h1>ProStage :<small>C'est facile de trouver un stage</small></h1>
              </div>
            </div>
          </div>
        {% endblock %}


        {% block menu %}
        <div class="row">
          <div class="col-md-12">
            <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">

              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="navbar-nav">
                  <li class="nav-item active">
                    <a class="nav-link" href="#">Accueuil <span class="sr-only">(current)</span></a>
                  </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="#">Formations <span class="sr-only">(current)</span></a>
                  </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="#">Entreprises <span class="sr-only">(current)</span></a>
                  </li>
                </ul>
              </div>
            </nav>
          </div>
        </div>
        {% endblock %}


        {% block contenu %}
        <div class="row">
      		<div class="col-md-12">
      			<div class="card">
      				<h5 class="card-header">
                {% block titrePage %}
      					Card title
                {% endblock %}
      				</h5>
      				<div class="card-body">
      					<p class="card-text">
                  {% block texte %}
      						Card content
                  {% endblock %}
      					</p>
      				</div>
      			</div>
      		</div>
      	</div>
        {% endblock %}


        {% block footer %}
        <div class="row">
          <div class="col-md-12">
            <span class="badge badge-default">Site réalisé dans le cadre du module M3104 - Programmation Web Côté Serveur</span>
          </div>
        </div>
        {% endblock %}

        {% block javascripts %}
          <script
          src="{{asset('/js/bootstrap.min.js')}}"></script>
        {% endblock %}
    {% endblock %}
    </div>
    </body>
</html>

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}PROSTAGE{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {% block stylesheets %}
          <link rel="stylesheet" href={{asset('/css/bootstrap.min.css')}}>
        {% endblock %}
    </head>
    <body>

    {% block body %}
    <div class="container-fluid">

      {% block header %}
      <div class="row">
        <div class="col-md-12">
          <div class="jumbotron jumbotron-fluid bg-dark text-white">
            <div class="container">
              <h1 class="display-4">ProStages</h1>
              <p class="lead">C'est facile de trouver un stage !</p>
            </div>
          </div>
        </div>
      </div>
      {% endblock %}

        {% block menu %}
        <div class="row">
          <div class="col-md-12">
            <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">

              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="navbar-nav">
                  <li class="nav-item active">
                    <a class="nav-link" href="{{path('proStage_accueil')}}">Accueil <span class="sr-only">(current)</span></a>
                  </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="{{path('proStage_formations')}}">Formations <span class="sr-only">(current)</span></a>
                  </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="{{path('proStage_entreprises')}}">Entreprises <span class="sr-only">(current)</span></a>
                  </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="{{path('proStage_ajoutEntreprise')}}">Ajouter une entreprise <span class="sr-only">(current)</span></a>
                  </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="{{path('proStage_ajoutStage')}}">Ajouter un stage<span class="sr-only">(current)</span></a>
                  </li>
                  {% if is_granted('ROLE_ADMIN') %}
                  <li class="nav-item active">
      							 <a class="nav-link" href="{{path('formation_index')}}">Administration des formations <span class="sr-only">(current)</span></a>
      						</li>
                  {% endif %}
                </ul>
                <ul class="navbar-nav ml-auto">
                  </li class="nav-item">
                    {% if is_granted('ROLE_USER') %}
                    <li class="nav-item active">
                      <a class="nav-link" href="{{path('app_logout')}}">
                        Déconnexion ({{ app.user.prenom }} {{ app.user.nom }})
                       <span class="sr-only">(current)</span></a>
                    </li>
                    {% else %}
                    <li class="nav-item active">
                      <a class="nav-link" href="{{path('app_login')}}">
                        Connexion
                        <span class="sr-only">(current)</span></a>
                      </li>
                      <li class="nav-item active">
                        <a class="nav-link" href="{{path('app_inscription')}}">
                          Inscription
                          <span class="sr-only">(current)</span></a>
                        </li>
                      {% endif %}
                      <li>
                      </ul>
              </div>
            </nav>
          </div>
        </div>
        {% endblock %}


        {% block contenu %}
        {% endblock %}


        {% block footer %}
        <div class="row" style="margin-top:15px;">
          <div class="col-md-12" style="color:#2B2929">
            Site réalisé par Benjamin LABY
          </div>
        </div>
        {% endblock %}

        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src={{asset('/js/bootstrap.min.js')}}></script>
        {% endblock %}
    {% endblock %}
    </div>
    </body>
</html>
